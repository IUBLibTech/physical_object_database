<h2>Returns</h2>
<div class="left">
	<h2>Batches With <i>Returned</i> Current Workflow Status</h2>
	<table>
		<thead>
			<tr>
				<th>Identifier</th>
				<th>Current Status</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @batches.each_with_index do |b, index| %>
				<tr class=<%= index.odd? ? "odd" : "even" %>>
					<td><%= b.identifier %></td>
					<td><%= b.current_workflow_status %></td>
					<td>
						<%= link_to "Show", batch_path(b) if policy(b).show? %>
						<%= link_to "Return Bins", return_bins_return_path(b.id) if policy(:return).return_bins? %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
