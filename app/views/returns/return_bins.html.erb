<h2>Returning Bins For Batch <i><%= @batch.identifier%></i></h2>
<div class="left">
	<table>
		<thead>
			<tr>
				<th>Bin Identifier</th>
				<th>Current Status</th>
				<th>
					Action
				</th>
			</tr>
		</thead>
		<tbody>
			<% @bins.each_with_index do |bin, index| %>
				<tr>
					<td>
						<%= bin.identifier %>
					</td>
					<td>
						<%= bin.current_workflow_status %>
					</td>
					<td>
						<%= link_to("Show", bin_path(bin)) %><br/>
						<% if bin.current_workflow_status == "Batched" %>

							<%= link_to("Unload bin from batch", unload_bin_return_path(bin)) %>
						<% elsif bin.current_workflow_status == "Returned to Staging Area" %>
							<%= link_to("Unpack bin contents", return_bin_return_path(bin)) %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
