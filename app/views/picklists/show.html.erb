<% content_for :context_menu do %>
	<div class="contextMenuItem">
    <%= link_to("Edit", :action => 'edit', id: @picklist.id) if policy(@picklist).edit? %>
  </div>
  <div class="contextMenuItem">
		<%= link_to("Delete", picklist_path(@picklist.id), method: :delete, data: {confirm: 'Are you sure you want to delete this Picklist?'}) if policy(@picklist).destroy? %>
  </div>
  <div class="contextMenuItem">
		<%= link_to("Re-send to Memnon", resend_picklist_path(@picklist.id), method: :patch, data: {confirm: 'Are you sure you want to re-send all items to Memnon?'}) if policy(@picklist).resend? %>
  </div>
<% end %>
<% @action = 'show' %>
<%= render(:partial => "picklist") %>
