<table>
<tr class="status_object_type">
        <th colspan="4"><%= object_type %> Condition Statuses</th>
</tr>
<% row_count = 0 %>
<% @templates = @all_condition_status_templates[object_type] %>
<% unless @templates.nil? || @templates.size.zero? %>
  <% @templates.each do |row| %>
    <% if row_count.odd? %>
    <tr class='odd'>
    <%else%>
    <tr class='even'>
    <%end%>
      <td><%= row.name %></td>
      <td title="<%= row.name %>: <%= row.description %>"><%= row.description[0, 20] %><% if row.description.length > 20 %><%= '...' %><% end %></td>
      <td>
        <%= row.blocks_packing ? 'âœ“' : '' %>
      </td>
      <td>
        <%= link_to("Show", {controller: :condition_status_templates, action: 'show', id: row.id}) %>
        <%= link_to("Edit", {controller: :condition_status_templates, action: 'edit', id: row.id}) %>
        <%= link_to("Delete", row, method: :delete, data: {confirm: 'Are you sure you want to delete this Condition Status Template?'}) %>
      </td>
    </tr>
    <% row_count += 1 %>
  <% end %>
<% else %>
  <tr><td colspan="4">No entries defined</td></tr>
<% end %>
</table>
