<%= render 'shared/error_messages', object: f.object %>
<table>
  <tr><th colspan="2">Condition Status</th></tr>
  <tr>
    <th><%= f.select :condition_status_template_id, target_object.condition_status_options, prompt: 'Select a condition status...', readonly: !@edit_mode %></th>
    <td><% if @edit_mode %><%= f.link_to_remove "Remove condition" %><% end %></td>
  </tr>
  <tr>
    <th>Notes</th>
    <td><%= f.text_area :notes, readonly: !@edit_mode %></td>
  </tr>
  <tr>
    <th>Created At</th>
    <td><%= f.text_field(:created_at, readonly: true) %></td>
  </tr>
  <tr>
    <th>Updated At</th>
    <td><%= f.text_field(:updated_at, readonly: true) %></td>
  </tr>
</table>

