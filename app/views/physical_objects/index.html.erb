  <% content_for :context_menu do %>
    <div class="contextMenuItem">
      <%= link_to("Create New Physical Object", controller: 'physical_objects', action: 'new') %>
    </div>
    <div class="contextMenuItem">
      <%# TODO: fix routing file to make the id: 'new' unnecessary %>
      <%= link_to("Upload Spreadsheet", controller: 'physical_objects', action: 'upload_show', id: 'new') %>
    </div>
  <% end %>

  <h2>Physical Objects</h2> 
  <table class="po list">
    <tr class="header">
      <th>ID</th>
      <th>MDPI barcode</th>
      <th>IU barcode</th>
      <th>Call Number</th>
      <th>Format</th>
      <th>Actions</th>
    </tr>
    <% count = 1 %>
    <% @physical_objects.each do |po| %>
    <% if count.odd? %>
    <tr class='odd'>
    <%else%>
    <tr class='even'>
    <%end%>
      <td><%= po.id %></td>
      <td><%= po.mdpi_barcode %></td>
      <td><%= po.iucat_barcode %></td>
      <td><%= po.call_number %></td>
      <td><%= po.format %></td>
      <td>
        <%= link_to("Show", {:controller => 'physical_objects', :action => 'show', :id => po.id}, :class => 'action show') %>
        <%= link_to("Edit", {:controller => 'physical_objects', :action => 'edit', :id => po.id}, :class => 'action edit') %>
        <%= link_to("Split", {:controller => 'physical_objects', :action => 'split_show', :id => po.id}, :class => 'action split')%>
        <%= link_to("Delete", physical_object_path(po.id), method: :delete, data: {:confirm=>'Are you sure you want to delete this Physical Object?'})%>
      </td>
    </tr>
    <% count += 1 %>
    <% end %>
  </table>

