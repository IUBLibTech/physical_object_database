<% content_for :context_menu do %>
  <div class="contextMenuItem">
    <%= link_to "Edit", edit_group_key_path(@group_key) if policy(@group_key).edit? %>
  </div>
  <div class="contextMenuItem">
    <%= link_to("Delete", @group_key, method: :delete, data: {:confirm=>'Are you sure you want to delete this Group Key?  This will also delete all associated Physical Objects.'}) if policy(@group_key).destroy?%>
  </div>
  <div class="contextMenuItem">
    <%= link_to "View Group Keys", group_keys_path if policy(GroupKey).index?  %>
  </div>
<% end %>

<div id="group_key" class="left">
  <h2>Group Key</h2>
  <%= render 'group_key' %>
</div>
<div id="physical_objects" class="left">
  <h2>Physical Objects in this Group: <%= @group_key.physical_objects_count %></h2>
  <%= render 'physical_objects/physical_objects_table' %>
</div>
<div class="clear"></div>
<div id="include_physical_objects" class="left">
  <%= render 'include_physical_objects' %>
</div>
<div class="clear"></div>
<div id="reorder_physical_objects" class="left">
  <h2>Reorder Physical Objects</h2>
  <%= render 'reorder_physical_objects' %>
</div>

