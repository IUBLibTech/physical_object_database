<table>
  <tr><th colspan="2">Signal Chain Format</th></tr>
  <% if f.object.errors.any? %>
  <tr><th>ERRORS</th><td><%= render 'shared/error_messages', object: f.object %></td></tr>
  <% end %>
  <% if @edit_mode && policy(@signal_chain).destroy? %>
    <tr>
      <th></th>
      <td><%= f.link_to_remove("Delete signal chain format", data: {confirm: 'Are you sure you want to mark this signal chain format for deletion?  The signal chain format will be deleted when you submit the form.'}) if policy(@signal_chain).edit? %></td>
    </tr>
  <% end %>
  <tr>
    <th>Format</th>
    <td><%= f.select :format, TechnicalMetadatumModule.tm_formats_hash, {include_blank: 'Select a format...'}, disabled: !@edit_mode %></td>
  </tr>
</table>
