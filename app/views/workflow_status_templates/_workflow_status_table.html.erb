<table>
<tr class="status_object_type">
        <th colspan="4"><%= object_type %> Workflow Statuses</th>
</tr>
<% row_count = 0 %>
<% @templates = @all_workflow_status_templates[object_type] %>
<% unless @templates.nil? || @templates.size.zero? %>
  <% @templates.each do |row| %>
    <% if row_count.odd? %>
    <tr class='odd'>
    <%else%>
    <tr class='even'>
    <%end%>
      <td><%= row.name %></td>
      <td><%= row.description[0, 20] %><% if row.description.length > 20 %><%= '...' %><% end %></td>
      <td><%= row.sequence_index %></td>
      <td>
        <%= link_to "Show", workflow_status_template_path(row.id) %>
        <%= link_to "Edit", edit_workflow_status_template_path(row.id) %>
        <%= link_to "Delete", row, method: :delete, data: {confirm: 'Are you sure you want to delete this Workflow Status?'} %>
      </td>
    </tr>
    <% row_count += 1 %>
  <% end %>
<% else %>
  <tr><td colspan="4">No entries defined</td></tr>
<% end %>
</table>
