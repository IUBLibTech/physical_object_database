<%= error_messages_for(@workflow_status_template) %>
<%= form_for(@workflow_status_template) do |f| %>
<h2>Workflow Status</h2>
<table>
	<tr>
		<th>Name</th>
		<td>
			<% if @edit_mode %>
				<%= f.text_field(:name) %>
			<% else %>
				<%= @workflow_status_template.name %>
			<% end %>
		</td>
	</tr>
	<tr>
		<th>Description</th>
		<td>
			<% if @edit_mode %>
				<%= f.text_field(:description) %>
			<% else %>
				<%= @workflow_status_template.description %>
			<% end %>
		</td>
	</tr>
	<tr>
		<th>Sequence Index</th>
		<td>
			<% if @edit_mode %>
				<%= f.text_field(:sequence_index) %>
			<% else %>
				<%= @workflow_status_template.sequence_index %>
			<% end %>
		</td>
	</tr>
	<tr>
		<th>Object Type</th>
		<td>
			<% if @edit_mode %>
				<%= f.select(:object_type, @workflow_status_template.object_types) %>
			<% else %>
				<%= @workflow_status_template.object_type %>
			<% end %>
		</td>
	</tr>
</table>

<%# add the submit and close off the form_for %>
<%if @edit_mode or @action == 'destroy' %>
  <div class="clear" ><%= submit_tag(@submit_text) %></div>
<% end %>

<% end %>
