<div class="left">
	<table id="digi_file_<%= f.object.id %>" class="digiprov">
	<%#= fields_for :digital_file_provenance do |f|%>
		<% if @edit_mode %>
		<tr>
			<td></td>
			<td>
				<%= f.link_to_remove("Delete Digital File", data: {confirm: 'Are you sure you want to delete this Digital File? The file will be deleted when you submit the form.'}) %>
			</td>
		</tr>
		<% end %>
		<tr>
			<th>Filename</th>
			<td>
				<%= f.text_field :filename %>
			</td>
		</tr>
		<tr>
			<th>Date Digitized</th>
			<td>
				<%= f.text_field :display_date_digitized, readonly: !@edit_mode, class: !@edit_mode ? "" : "date" %>
			</td>
		</tr>
		<tr>
			<th>Comment</th>
			<td>
				<%= f.text_area :comment, cols: "37" %>
			</td>
		</tr>
		<tr>
			<th>Created By</th>
			<td>
				<%= f.text_field :created_by %>
			</td>
		</tr>
		<tr>
			<th>Speed Used</th>
			<td>
				<%= f.text_field :speed_used %>
			</td>
		</tr>
		<tr>
			<th>Signal Chain</th>
			<td>
				<% if @edit_mode %>
					<%= f.collection_select(:signal_chain_id, SignalChain.order('name'), :id, :name, {include_blank: true}, {disabled: !@edit_mode, id: "signal_chain_select_#{f.object.id}"}) %>
				<% else %>
					<%= f.object.signal_chain ? f.object.signal_chain.name : "Not assigned" %>
				<% end %>
			</td>
		</tr>
		<% @signal_chain = f.object.signal_chain %>
		<%= render 'signal_chains/ajax_show_signal_chain' %>
	<%# end %>
</table>
</div>