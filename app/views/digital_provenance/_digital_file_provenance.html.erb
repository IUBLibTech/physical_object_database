<div class="left">
	<table class="digiprov">
	<%#= fields_for :digital_file_provenance do |f|%>
		<tr>
			<td></td>
			<td><%= f.link_to_remove("Delete Digital File", data: {confirm: 'Are you sure you want to delete this Digital File? The file will be deleted when you submit the form.'}) %></td>
		</tr>
		<tr>
			<th>Filename</th>
			<td>
				<%= f.text_field :filename %>
			</td>
		</tr>
		<tr>
			<th>Date Digitized</th>
			<td>
				<%= f.text_field :display_date_digitized, readonly: !@edit_mode, class: !@edit_mode ? "" : "date" %>
			</td>
		</tr>
		<tr>
			<th>Comment</th>
			<td>
				<%= f.text_area :comment, cols: "37" %>
			</td>
		</tr>
		<tr>
			<th>Created By</th>
			<td>
				<%= f.text_field :created_by %>
			</td>
		</tr>
		<tr>
			<th>Speed Used</th>
			<td>
				<%= f.text_field :speed_used %>
			</td>
		</tr>
		<tr>
			<th>Signal Chain</th>
			<td>
				<% if @edit_mode %>
					<%= f.collection_select(:signal_chain_id, SignalChain.order('name'), :id, :name, {include_blank: true}, disabled: !@edit_mode) %>
				<% else %>
					<%= f.object.signal_chain ? f.object.signal_chain.name : "Not assigned" %>
				<% end %>
			</td>
		</tr>
	<%# end %>
</table>
</div>
	<script type='text/javascript'>
		$(function (){
			$('.date').datepicker();
		});
	</script>