<div class="left">
	<table class="digiprov">
	<%#= fields_for :digital_file_provenance do |f|%>
		<tr>
			<td></td>
			<td><%= f.link_to_remove("Delete Digital File", data: {confirm: 'Are you sure you want to delete this Digital File? The file will be deleted when you submit the form.'}) %></td>
		</tr>
		<tr>
			<th>Filename</th>
			<td>
				<%= f.text_field :filename %>
			</td>
		</tr>
		<tr>
			<th>Date Digitized</th>
			<td>
				<%= f.text_field :date_digitized, readonly: !@edit_mode, class: @readonly ? "" : "date" %>
			</td>
		</tr>
		<tr>
			<th>Comment</th>
			<td>
				<%= f.text_area :comment, cols: "37" %>
			</td>
		</tr>
		<tr>
			<th>Created By</th>
			<td>
				<%= f.text_field :created_by %>
			</td>
		</tr>
		<tr>
			<th>Player Serial Number</th>
			<td>
				<%= f.text_field :player_serial_number %>
			</td>
		</tr>
		<tr>
			<th>Player Manufacturer</th>
			<td>
					<%= f.text_field :player_manufacturer %>
			</td>
		</tr>
		<tr>
			<th>Player Model</th>
			<td>
				<%= f.text_field :player_model %>
			</td>
		</tr>
		<tr>
			<th>AD Serial Number</th>
			<td>
				<%= f.text_field :ad_serial_number %>
			</td>
		</tr>
		<tr>
			<th>AD Manufacturer</th>
			<td>
				<%= f.text_field :ad_manufacturer %>
			</td>
		</tr>
		<tr>
			<th>AD Model</th>
			<td>
				<%= f.text_field :ad_model %>
			</td>
		</tr>
		<tr>
			<th>Extraction Workstation</th>
			<td>
				<%= f.text_field :extraction_workstation %>
			</td>
		</tr>
		<tr>
			<th>Speed Used</th>
			<td>
				<%= f.text_field :speed_used %>
			</td>
		</tr>
	<%# end %>
</table>
</div>
	<script type='text/javascript'>
		$(function (){
			$('.date').datepicker();
		});
	</script>